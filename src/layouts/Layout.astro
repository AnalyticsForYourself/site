---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../assets/index.css';
import ModeToggle from '../components/ModeToggle.astro';
import { SignInButton } from '@clerk/astro/components';
const theme = Astro.cookies.get('theme') || Astro.cookies.set('theme', 'light') || { value: 'light' };
---
<!doctype html>
<html lang="en" data-theme={theme.value}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://fav.farm/🔍" />
		<meta name="generator" content={Astro.generator} />
		<title>Analytics For Yourself</title>
	</head>
	<body>
		<nav class="navbar py-3">
			<div class="container-lg">
				<h1 class="text-secondary fs-4">AnalyticsForYourself</h1>
				<div>
					<ModeToggle />
					<!--SignInButton /-->
				</div>
			</div>
		</nav>
		<main class="container-lg">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background-color: var(--background-50);
	}
	main {
		margin: 0 auto;
	}
</style>
